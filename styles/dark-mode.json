{
	"$schema": "https://schemas.wp.org/wp/6.8/theme.json",
	"version": 3,
	"title": "Dark Mode",
	"description": "Dark color palette optimized for low-light viewing environments",
	"settings": {
		"color": {
			"palette": [
				{
					"slug": "primary",
					"color": "#359EFF",
					"name": "Primary Blue"
				},
				{
					"slug": "primary-dark",
					"color": "#5CB3FF",
					"name": "Primary Light Blue"
				},
				{
					"slug": "secondary",
					"color": "#1E3A5F",
					"name": "Secondary Dark Blue"
				},
				{
					"slug": "green-blue",
					"color": "#00A3B3",
					"name": "Green Blue (Brighter)"
				},
				{
					"slug": "cta-yellow",
					"color": "#FFD700",
					"name": "CTA Gold"
				},
				{
					"slug": "accent",
					"color": "#FFD28E",
					"name": "Accent Peach"
				},
				{
					"slug": "accent-dark",
					"color": "#1d2c33",
					"name": "Accent Dark"
				},
				{
					"slug": "accent-text",
					"color": "#332A1C",
					"name": "Accent Text"
				},
				{
					"slug": "background-light",
					"color": "#1a1a1a",
					"name": "Background Dark Gray"
				},
				{
					"slug": "background-dark",
					"color": "#0f1923",
					"name": "Background Deep Dark"
				},
				{
					"slug": "text-light",
					"color": "#CCCCCC",
					"name": "Text Light Gray"
				},
				{
					"slug": "text-dark",
					"color": "#E0E0E0",
					"name": "Text Bright Gray"
				},
				{
					"slug": "footer-dark",
					"color": "#0A0F14",
					"name": "Footer Black"
				}
			]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background-dark)",
			"text": "var(--wp--preset--color--text-dark)"
		},
		"elements": {
			"button": {
				"color": {
					"background": "var(--wp--preset--color--cta-yellow)",
					"text": "var(--wp--preset--color--accent-text)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			},
			"heading": {
				"color": {
					"text": "var(--wp--preset--color--text-dark)"
				}
			}
		},
		"blocks": {
			"core/post-template": {
				"css": ".wp-block-post { background-color: var(--wp--preset--color--accent-dark); border-color: rgba(255, 255, 255, 0.1); }"
			}
		}
	}
}
